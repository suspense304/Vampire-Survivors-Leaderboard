@code {
    private List<Entry> madForestNewest = new List<Entry>();
    private List<Entry> inLaidNewest = new List<Entry>();
    private List<Entry> greenAcresNewest = new List<Entry>();
    bool isAdmin;

    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    private List<Entry> SortList(List<Entry> lst, int runTypeId)
    {
        switch (runTypeId)
        {
            case 1:
                return lst.OrderByDescending(o => o.Level).ToList();
            case 2:
                return lst.OrderByDescending(o => o.Kills).ToList();
            case 3:
                return lst.OrderByDescending(o => o.SurvivedTime).ToList();
            case 4:
                return lst.OrderByDescending(o => o.Gold).ToList();
            case 0:
                return lst.OrderByDescending(o => o.Level).ToList();
        }
        return lst;
    }

    protected override async Task OnInitializedAsync()
    {

        var authState = await authenticationStateTask;
        var user = authState.User;
        var userId = user.FindFirstValue(ClaimTypes.NameIdentifier);
        User chkUser = _context.Users.Where(w => w.UserKey == userId).FirstOrDefault();
        if (chkUser != null) isAdmin = chkUser.Admin;

        madForestNewest = await _context.Entries
        .Include(i => i.User)
        .Include(i => i.Stage)
        .Include(i => i.Character)
        .Include(i => i.RunType)
        .Where(w => w.Approved == true && w.Deleted == false && w.StageId == 1).Take(5).ToListAsync();

        madForestNewest = SortList(madForestNewest, 2);

        inLaidNewest = await _context.Entries
        .Include(i => i.User)
        .Include(i => i.Stage)
        .Include(i => i.Character)
        .Include(i => i.RunType)
        .Where(w => w.Approved == true && w.Deleted == false && w.StageId == 2).Take(5).ToListAsync();

        inLaidNewest = SortList(inLaidNewest, 1);

        greenAcresNewest = await _context.Entries
        .Include(i => i.User)
        .Include(i => i.Stage)
        .Include(i => i.Character)
        .Include(i => i.RunType)
        .Where(w => w.Approved == true && w.Deleted == false && w.StageId == 3).Take(5).ToListAsync();

        greenAcresNewest = SortList(greenAcresNewest, 3);
    }
}


