        <div style="width: 100%; text-align: center; background-color: #424242ff; color: white;"><h4>Green Acres</h4></div>
        <MudTable Items="@greenAcresNewest" Dense="true" Hover="true" FixedHeader="true">
            <HeaderContent>
                <MudTh></MudTh>
